<phpunit bootstrap="./Bootstrap.php">
	<testsuite name="Poser Test Suite">
		<directory>./</directory>
	</testsuite>
	
	<groups>
		<exclude>
			<group>disable</group>
		</exclude>
	</groups>

	<filter>
		<whitelist>
			<directory suffix=".php">../src/</directory>
		</whitelist>
	</filter>
</phpunit>
