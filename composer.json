{
  "name": "kodova/poser",
  "type": "library",
  "description": "A php mock framework inspired by Mockito",
  "keywords": ["mock", "test", "stub", "TDD"],
  "license": "MIT",
  "require": {
    "hamcrest/hamcrest-php" : "v1.2.2"
  },
  "require-dev": {
    "phpunit/phpunit" : "~4.8"
  },
  "autoload": {
    "psr-4": {
      "Kodova\\Poser\\": "src/Kodova/Poser/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kodova\\Poser\\Helpers\\": "test/Kodova/Poser/Helpers"
    }
  }
}